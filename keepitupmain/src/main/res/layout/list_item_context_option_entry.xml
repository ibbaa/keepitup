<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_list_item_context_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_list_item_context_option_margin"
    android:padding="@dimen/layout_list_item_context_option_padding"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_list_item_context_option"
        android:layout_gravity="fill_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_list_item_context_option_margin"
        card_view:cardCornerRadius="@dimen/cardview_list_item_context_option_corner_radius"
        app:cardElevation="@dimen/cardview_list_item_context_option_card_elevation">

        <LinearLayout
            android:id="@+id/linearlayout_list_item_context_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/linearlayout_list_item_context_option_margin"
            android:padding="@dimen/linearlayout_list_item_context_option_padding"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textview_list_item_context_option_name"
                android:layout_width="@dimen/textview_list_item_context_option_name_width"
                android:layout_height="@dimen/textview_list_item_context_option_name_height"
                android:layout_margin="@dimen/textview_list_item_context_option_name_margin"
                android:padding="@dimen/textview_list_item_context_option_name_padding"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:textStyle="normal"
                android:text="" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>