<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_dialog_edit_network_task_error"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <GridLayout
        android:id="@+id/gridlayout_dialog_edit_network_task_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:id="@+id/textview_dialog_edit_network_task_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/text_dialog_edit_network_task_error_title" />

        <TextView
            android:id="@+id/textview_dialog_edit_network_task_error_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Field" />

        <TextView
            android:id="@+id/textview_dialog_edit_network_task_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Message" />

        <ImageView
            android:id="@+id/imageview_dialog_edit_network_task_error_ok"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/label_dialog_edit_network_task_error_ok"
            app:srcCompat="@drawable/icon_ok_selector" />
    </GridLayout>
</ScrollView>