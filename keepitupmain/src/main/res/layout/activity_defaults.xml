<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_activity_defaults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ibba.keepitup.ui.DefaultsActivity">

    <ScrollView
        android:id="@+id/scrollview_activity_defaults"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_activity_defaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_defaults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_defaults_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_defaults_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_defaults_card_elevation">

                <TextView
                    android:id="@+id/textview_activity_defaults_defaults_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/textview_activity_defaults_defaults_margin"
                    android:textStyle="bold"
                    android:text="@string/label_activity_defaults_defaults" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_accesstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_ccesstype_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_accesstype_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_accesstype_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_accesstype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_activity_defaults_accesstype_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_accesstype_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_accesstype" />

                    <RadioGroup
                        android:id="@+id/radiogroup_activity_defaults_accesstype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_address_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_address_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_address_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_activity_defaults_address_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_address_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_address" />

                    <TextView
                        android:id="@+id/textview_activity_defaults_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_port_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_port_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_port_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_activity_defaults_port_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_port_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_port" />

                    <TextView
                        android:id="@+id/textview_activity_defaults_port"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_interval_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_interval_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_interval_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_interval_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_interval_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_interval" />

                    <LinearLayout
                        android:id="@+id/linearlayout_activity_defaults_interval_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/linearlayout_interval_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_activity_defaults_interval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="" />

                        <TextView
                            android:id="@+id/textview_activity_defaults_interval_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/textview_activity_defaults_interval_minutes_margin"
                            android:textStyle="normal"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_onlywifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_onlywifi_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_onlywifi_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_onlywifi_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_onlywifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_activity_defaults_onlywifi_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_onlywifi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_onlywifi" />

                    <LinearLayout
                        android:id="@+id/linearlayout_activity_defaults_onlywifi_onoff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/linearlayout_activity_defaults_onlywifi_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_activity_defaults_onlywifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="false" />

                        <TextView
                            android:id="@+id/textview_activity_defaults_onlywifi_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_activity_defaults_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_activity_defaults_notification_margin"
                card_view:cardCornerRadius="@dimen/cardview_activity_defaults_notification_corner_radius"
                app:cardElevation="@dimen/cardview_activity_defaults_notification_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_activity_defaults_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linearlayout_activity_defaults_notification_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_activity_defaults_notification_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_activity_defaults_notification" />

                    <LinearLayout
                        android:id="@+id/linearlayout_activity_defaults_notification_on_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/linearlayout_activity_defaults_notification_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_activity_defaults_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="false" />

                        <TextView
                            android:id="@+id/textview_activity_defaults_notification_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>