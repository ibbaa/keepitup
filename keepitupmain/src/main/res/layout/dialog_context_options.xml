<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_dialog_context_options"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearlayout_dialog_context_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_dialog_context_options_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/label_dialog_context_options_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview_dialog_context_options_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/listview_dialog_context_options_entries_margin"
            android:padding="@dimen/listview_dialog_context_options_entries_padding"
            android:layout_gravity="fill_horizontal"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/imageview_dialog_context_options_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/label_dialog_context_options_cancel"
            app:srcCompat="@drawable/icon_cancel_selector" />
    </LinearLayout>
</ScrollView>