<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_global_settings_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ibba.keepitup.ui.GlobalSettingsActivity">

    <ScrollView
        android:id="@+id/scrollview_global_settings_activity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_global_settings_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_global_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_global_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_global_card_elevation">

                <TextView
                    android:id="@+id/textview_global_settings_activity_global_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_global_margin"
                    android:textStyle="bold"
                    android:text="@string/label_global_settings_activity_global" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_ping_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_ping_count_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_ping_count_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_ping_count_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_global_settings_activity_ping_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_ping_count_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_global_settings_activity_ping_count_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_global_settings_activity_ping_count" />

                    <LinearLayout
                        android:id="@+id/linearlayout_global_settings_activity_ping_count_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_settings_activity_ping_count_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_global_settings_activity_ping_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_notification_inactive_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_notification_inactive_network_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_notification_inactive_network_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_notification_inactive_network_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_global_settings_activity_notification_inactive_network"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_notification_inactive_network_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_global_settings_activity_notification_inactive_network_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_global_settings_activity_notification_inactive_network" />

                    <LinearLayout
                        android:id="@+id/linearlayout_global_settings_activity_notification_inactive_network_on_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_settings_activity_notification_inactive_network_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/switch_global_settings_activity_notification_inactive_network"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="false" />

                        <TextView
                            android:id="@+id/textview_global_settings_activity_notification_inactive_network_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_download_external_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_download_external_storage_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_download_external_storage_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_download_external_storage_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_global_settings_activity_download_external_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_download_external_storage_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_global_settings_activity_download_external_storage_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_global_settings_activity_download_external_storage" />

                    <LinearLayout
                        android:id="@+id/linearlayout_global_settings_activity_download_external_storage_on_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_settings_activity_download_external_storage_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/switch_global_settings_activity_download_external_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="false" />

                        <TextView
                            android:id="@+id/textview_global_settings_activity_download_external_storage_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_download_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_download_folder_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_download_folder_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_download_folder_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_global_settings_activity_download_folder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_download_folder_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_global_settings_activity_download_folder_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_global_settings_activity_download_folder" />

                    <LinearLayout
                        android:id="@+id/linearlayout_global_settings_activity_download_folder_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_settings_activity_download_folder_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_global_settings_activity_download_folder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview_global_settings_activity_download_keep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/global_settings_activity_download_keep_margin"
                card_view:cardCornerRadius="@dimen/global_settings_activity_download_keep_corner_radius"
                app:cardElevation="@dimen/global_settings_activity_download_keep_card_elevation">

                <LinearLayout
                    android:id="@+id/linearlayout_global_settings_activity_download_keep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_settings_activity_download_keep_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_global_settings_activity_download_keep_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/label_global_settings_activity_download_keep" />

                    <LinearLayout
                        android:id="@+id/linearlayout_global_settings_activity_download_keep_on_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/global_settings_activity_download_keep_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/switch_global_settings_activity_download_keep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:showText="false" />

                        <TextView
                            android:id="@+id/textview_global_settings_activity_download_keep_on_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>