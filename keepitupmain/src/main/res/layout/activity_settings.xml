<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_settings_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ibba.keepitup.ui.SettingsActivity">

    <LinearLayout
        android:id="@+id/linearlayout_settings_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_settings_activity_defaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_activity_defaults_margin"
            card_view:cardCornerRadius="@dimen/settings_activity_defaults_corner_radius"
            app:cardElevation="@dimen/settings_activity_defaults_card_elevation">

            <TextView
                android:id="@+id/textview_settings_activity_defaults_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/settings_activity_defaults_margin"
                android:textStyle="bold"
                android:text="@string/label_settings_activity_defaults" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_settings_activity_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_activity_address_margin"
            card_view:cardCornerRadius="@dimen/settings_activity_address_corner_radius"
            app:cardElevation="@dimen/settings_activity_address_card_elevation">

            <LinearLayout
                android:id="@+id/linearlayout_settings_activity_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/settings_activity_address_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_settings_activity_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/label_settings_activity_address" />

                <TextView
                    android:id="@+id/textview_settings_activity_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_settings_activity_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_activity_interval_margin"
            card_view:cardCornerRadius="@dimen/settings_activity_interval_corner_radius"
            app:cardElevation="@dimen/settings_activity_interval_card_elevation">

            <LinearLayout
                android:id="@+id/linearlayout_settings_activity_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/settings_activity_interval_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_settings_activity_interval_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/label_settings_activity_interval" />

                <TextView
                    android:id="@+id/textview_settings_activity_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_settings_activity_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_activity_port_margin"
            card_view:cardCornerRadius="@dimen/settings_activity_port_corner_radius"
            app:cardElevation="@dimen/settings_activity_port_card_elevation">

            <LinearLayout
                android:id="@+id/linearlayout_settings_activity_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/settings_activity_port_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_settings_activity_port_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/label_settings_activity_port" />

                <TextView
                    android:id="@+id/textview_settings_activity_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>