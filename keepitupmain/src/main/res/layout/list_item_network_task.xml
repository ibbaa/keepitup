<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_list_item_network_task"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_network_task_margin"
    card_view:cardCornerRadius="@dimen/list_item_network_task_corner_radius"
    app:cardElevation="@dimen/list_item_network_task_card_elevation">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_list_item_network_task"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_item_network_task_margin">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textview_list_item_network_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/text_list_item_network_task_title" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textview_list_item_network_task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_list_item_network_task_title"
            android:textStyle="normal"
            android:text="@string/text_list_item_network_task_status" />

        <ImageView
            android:id="@+id/image_list_item_network_task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_list_item_network_task_title"
            android:layout_toRightOf="@+id/textview_list_item_network_task_status"
            android:contentDescription="@string/label_add_network_task"
            app:srcCompat="@drawable/icon_running" />

    </RelativeLayout>

</android.support.v7.widget.CardView>