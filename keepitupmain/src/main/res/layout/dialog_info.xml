<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_dialog_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearlayout_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/linearlayout_dialog_info_padding"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout_dialog_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_dialog_info_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/imageview_dialog_info_title_icon_padding"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_app" />

            <TextView
                android:id="@+id/textview_dialog_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_title_margin_top"
                android:padding="@dimen/textview_dialog_info_title_padding"
                android:textStyle="bold"
                android:text="@string/app_name" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridlayout_dialog_info_build_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gridlayout_dialog_info_build_info_margin_top"
            android:columnCount="2">

            <TextView
                android:id="@+id/textview_dialog_info_version_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_version_label_margin_top"
                android:padding="@dimen/textview_dialog_info_version_label_padding"
                android:layout_row="0"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/label_dialog_info_version" />

            <TextView
                android:id="@+id/textview_dialog_info_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_version_margin_top"
                android:padding="@dimen/textview_dialog_info_version_padding"
                android:textStyle="normal"
                android:layout_row="0"
                android:layout_column="1"
                android:text="" />

            <TextView
                android:id="@+id/textview_dialog_info_build_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_build_type_label_margin_top"
                android:padding="@dimen/textview_dialog_info_build_type_label_padding"
                android:layout_row="1"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/label_dialog_info_build_type" />

            <TextView
                android:id="@+id/textview_dialog_info_build_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_build_type_margin_top"
                android:padding="@dimen/textview_dialog_info_build_type_padding"
                android:layout_row="1"
                android:layout_column="1"
                android:textStyle="normal"
                android:text="" />

            <TextView
                android:id="@+id/textview_dialog_info_build_timestamp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_build_timestamp_label_margin_top"
                android:padding="@dimen/textview_dialog_info_build_timestamp_label_padding"
                android:layout_row="2"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/label_dialog_info_build_timestamp" />

            <TextView
                android:id="@+id/textview_dialog_info_build_timestamp_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_dialog_info_build_timestamp_margin_top"
                android:padding="@dimen/textview_dialog_info_build_timestamp_padding"
                android:layout_row="2"
                android:layout_column="1"
                android:textStyle="normal"
                android:text="" />

        </GridLayout>

        <TextView
            android:id="@+id/textview_dialog_info_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/textview_dialog_info_copyright_padding"
            android:textStyle="normal"
            android:textSize="@dimen/textview_dialog_info_copyright_text_size"
            android:text="" />

        <TextView
            android:id="@+id/textview_dialog_info_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/textview_dialog_info_license_padding"
            android:textStyle="normal"
            android:textSize="@dimen/textview_dialog_info_license_text_size"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/text_dialog_info_license" />

        <TextView
            android:id="@+id/textview_dialog_info_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/textview_dialog_info_github_padding"
            android:textStyle="normal"
            android:textSize="@dimen/textview_dialog_info_github_text_size"
            android:autoLink="web"
            android:text="@string/text_dialog_info_github" />

        <TextView
            android:id="@+id/textview_dialog_info_thirdparty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/textview_dialog_info_thirdparty_padding"
            android:textStyle="normal"
            android:textSize="@dimen/textview_dialog_info_thirdparty_text_size"
            android:clickable="true"
            android:focusable="true"
            android:text="" />

        <ImageView
            android:id="@+id/imageview_dialog_info_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/imageview_dialog_info_ok_padding_top"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/label_dialog_info_ok"
            app:srcCompat="@drawable/icon_ok_selector" />
    </LinearLayout>
</ScrollView>