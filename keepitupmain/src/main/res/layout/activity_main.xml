<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ibba.keepitup.ui.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/label_button_start" />

        <Button
            android:id="@+id/button_stop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/button_start"
            android:text="@string/label_button_stop" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview_network_tasks"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_stop"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/imageview_add_network_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_add_network_task"
            android:clickable="true"
            app:srcCompat="@drawable/icon_add_selector" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>